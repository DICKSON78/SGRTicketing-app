<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    android:orientation="vertical"
    tools:context=".Signin">

    <ImageView
        android:layout_width="150dp"
        android:layout_height="150dp"
        android:src="@drawable/tztrc"/>
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textSize="23dp"
        android:textStyle="bold"
        android:fontFamily="@font/poppins"
        android:textColor="@color/maroon"
        android:gravity="center"
        android:text="Welcome to SGR ticketing App"/>
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textSize="16dp"
        android:fontFamily="@font/poppins"
        android:textColor="@color/black"
        android:textStyle="bold"
        android:layout_marginLeft="34dp"
        android:text="SignIn to start your new Jouney"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginRight="30dp"
        android:layout_marginTop="25dp"
        android:orientation="vertical"
        android:layout_marginLeft="30dp">

   <com.google.android.material.textfield.TextInputLayout
       android:layout_width="match_parent"
       android:layout_height="wrap_content"
       android:hint="email or phone number">

       <com.google.android.material.textfield.TextInputEditText
           android:id="@+id/signemail"
           android:layout_width="match_parent"
           android:layout_height="wrap_content"
           android:drawablePadding="7dp"
           android:drawableStart="@drawable/email"
           android:fontFamily="@font/poppins"
           android:inputType="text"/>
   </com.google.android.material.textfield.TextInputLayout>

        <com.google.android.material.textfield.TextInputLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="12dp"
            app:passwordToggleEnabled="true"
            app:passwordToggleTint="@color/maroon"
            android:hint="Password">

            <com.google.android.material.textfield.TextInputEditText
                android:id="@+id/signpassword"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:drawablePadding="7dp"
                android:drawableStart="@drawable/password"
                android:fontFamily="@font/poppins"
                android:inputType="textPassword"/>
        </com.google.android.material.textfield.TextInputLayout>
    </LinearLayout>

    <Button
        android:id="@+id/forgotpassword"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Forgot Password"
        android:layout_marginTop="15dp"
        android:textColor="@color/maroon"
        android:textStyle="bold"
        android:fontFamily="@font/poppins"
        android:backgroundTint="@color/white"
        android:layout_marginRight="26dp"
        android:layout_gravity="end"/>

    <androidx.appcompat.widget.AppCompatButton
        android:id="@+id/sigin_btn"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:fontFamily="@font/poppins"
        style="@android:style/Widget.Button"
        android:layout_marginRight="30dp"
        android:layout_marginLeft="30dp"
        android:layout_marginTop="32dp"
        android:elevation="30dp"
        android:padding="15dp"
        android:textColor="@color/white"
        android:textStyle="bold"
        android:background="@drawable/btnlogin"
        android:text="Login"/>

    <Button
        android:id="@+id/navsignup"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="NEW USER? SIGNUP"
        android:fontFamily="@font/poppins"
        android:layout_marginTop="85dp"
        android:textColor="@color/maroon"
        android:textStyle="bold"
        android:backgroundTint="@color/white"
        android:layout_gravity="center"/>

</LinearLayout>